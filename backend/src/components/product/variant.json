{
  "collectionName": "components_product_variants",
  "info": {
    "displayName": "Product Variant",
    "description": "Product variant with name, price, stock, and SKU"
  },
  "options": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
