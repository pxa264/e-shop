HOST=0.0.0.0
PORT=1337

# REQUIRED: 需要 4 个以上随机字符串（逗号分隔），用于加密签名
APP_KEYS=

# REQUIRED: 用于 API Token 生成的盐
API_TOKEN_SALT=

# OPTIONAL: 仅在使用 Strapi Transfer（数据迁移/传输 token）时需要
TRANSFER_TOKEN_SALT=

# REQUIRED: Strapi Admin 后台 JWT 密钥
ADMIN_JWT_SECRET=

# REQUIRED: 用户认证 JWT 密钥（Users & Permissions）
JWT_SECRET=

DATABASE_CLIENT=postgres
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=
DATABASE_USERNAME=
DATABASE_PASSWORD=
DATABASE_SSL=false

# Email Configuration
# 邮件服务器配置 - 用于发送订单状态通知
MAIL_DRIVER=smtp
MAIL_HOST=email-smtp.eu-central-1.amazonaws.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME=
MAIL_ENCRYPTION=tls

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# OPTIONAL: S3 区域（与 AWS_DEFAULT_REGION 二选一，至少填一个）
AWS_REGION=

# REQUIRED: S3 区域（与 AWS_REGION 二选一，至少填一个）
AWS_DEFAULT_REGION=

# REQUIRED: S3 bucket 名称
AWS_BUCKET=

# OPTIONAL: 标准 AWS S3 通常填 false；MinIO/部分兼容 S3 服务可能需要 true
AWS_USE_PATH_STYLE_ENDPOINT=false

# OPTIONAL: 自定义 S3 endpoint（仅在使用 MinIO/兼容 S3 的自建服务时需要）
AWS_ENDPOINT=

# REQUIRED: 未配置 CloudFront 时用作媒体访问前缀（S3 直链基地址）
AWS_RESOURCE_URL=

# OPTIONAL: CloudFront 域名（配置后媒体链接将优先使用此域名）
AWS_CLOUDFRONT_URL=

# Frontend URL
# 前端应用 URL - 用于邮件中的链接
FRONTEND_URL=

# Frontend (Next.js)
# REQUIRED: 前端访问 Strapi 的地址（Docker 内推荐 http://strapi:1337）
NEXT_PUBLIC_STRAPI_API_URL=
